<!-- The Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect("/")
} %>
        
<!-- A Message Block -->
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form action="/account/login" method="post" class="login-form">
    <label for="email">
        Email: <input type="email" name="account_email" id="email" required placeholder="Enter a valid email address" value="<%= locals.account_email %>">
    </label>
    <label for="password">
        Password: <input type="password" name="account_password" id="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><img id="toggle-pass" src="/images/site/visibility.svg" alt="t-pass">
    </label>

    <p id="req-pass">&#9888; All fiels are required.<br>Password must be minimun of 12 characters and include;<br> 1 capital letter, 1 number and 1 special character.</p>
    
    <button type="submit">
        Login
    </button>

    <p>No account? <a href="/account/register">Sing-up</a></p>
    
</form>

<script src="/js/script.js"></script>