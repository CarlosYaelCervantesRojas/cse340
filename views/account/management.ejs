<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirec("/")
}%>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li>&#9888; <%= error.msg %></li>
    <%}) %>
    </ul>
<% } %>

<section id="account-management">
    <% if (locals.accountData.account_type) { %>
        <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <% } %>

    <p><a href="/account/update/<%= locals.accountData.account_id%>" title="Update <%= locals.accountData.account_firstname%> account information">Update account information</a></p>

    <% if (locals.accountData.account_type == "Employee" || locals.accountData.account_type == "Admin") { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv/">Manage Inventory</a></p>
    <% }%>

    <h3>My Reviews</h3>
    <% if (userReviews) { %>
        <%- userReviews %>
    <% } else { %>
        <p class="no-reviews">You do not have any reviews yet.</p>
    <% }%>
</section>