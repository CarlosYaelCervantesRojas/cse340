<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirec("/")
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li>&#9888; <%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form action="/inv/add-classification" method="post" class="login-form">
    <label for="classification-name">
        Classification Name:<input type="text" id="classification-name" name="classification_name" required pattern="[a-zA-Z]+" value="<%- locals.classification_name %>">
    </label>

    <p id="req-pass">&#9888; Fiel is required.<br>The new classification name cannot contain a space or special character of any kind, it must be alphabetic characters only.</p>

    <button type="submit">
        Add classification
    </button>

</form>